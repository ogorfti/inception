# Database Credentials
DB_NAME=my_database
DB_USER=wordpress_user
DB_PASSWORD=your_secure_password
DB_HOST=localhost  # Optional, defaults to localhost

# WordPress Configuration
WP_SITEURL=http://your-domain.com  # Replace with your actual domain name
WP_HOME=/  # Defaults to "/", you can change it if WordPress files are in a subdirectory

# WordPress Admin Account
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=your_secure_password
WP_ADMIN_EMAIL=admin@your-domain.com

# Optional: Enable WordPress debug mode (for troubleshooting)
# WORDPRESS_DEBUG=true